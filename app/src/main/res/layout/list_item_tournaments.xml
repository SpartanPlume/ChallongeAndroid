<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/tournaments_list_padding_start_end"
    android:paddingStart="@dimen/tournaments_list_padding_start_end"
    android:paddingRight="@dimen/tournaments_list_padding_start_end"
    android:paddingEnd="@dimen/tournaments_list_padding_start_end" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tournaments_item_height"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tournament_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tournaments_item_height_half"
            android:gravity="bottom|center_vertical"
            android:textSize="@dimen/tournament_name"
            android:textColor="@color/tournament_name"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tournament_summary"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tournaments_item_height_half"
            android:gravity="top|center_vertical"
            android:textSize="@dimen/tournament_summary"
            android:textColor="@color/tournament_summary"
            android:fontFamily="sans-serif"
            android:text="Description" />

    </LinearLayout>

</RelativeLayout>